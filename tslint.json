{
  "extends": [
    "tslint:recommended"
  ],
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules": {
    // Custom
    "array-type": false,
    "interface-name": [false, "always-prefix"],
    "trailing-comma": [false, {"multiline": "always", "singleline": "never"}],

    // Angular
    "component-class-suffix": true,
    "directive-class-suffix": true,
    "import-destructuring-spacing": false,
    "no-attribute-parameter-decorator": true,
    "no-forward-ref": false,
    "no-input-rename": true,
    "no-output-rename": true,
    "no-trailing-whitespace": false,
    "use-host-property-decorator": true,
    "use-input-property-decorator": true,
    "use-life-cycle-interface": true,
    "use-output-property-decorator": true,
    "use-pipe-transform-interface": true,
    "no-empty-interface": false,

    // General
    "adjacent-overload-signatures": false,
    "member-access": false,
    "arrow-parens": false,
    "eofline": false,
    "max-classes-per-file": false,
    "max-line-length": false,
    "no-console": [true, "time", "timeEnd", "trace"],
    "no-empty": false,
    "no-string-literal": false,
    "no-use-before-declare": true,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [true, "single", "avoid-escape"],
    "variable-name": [true, "allow-leading-underscore", "allow-pascal-case", "ban-keywords", "check-format"],
    "whitespace": false,
    "prefer-const": false,
    "prefer-method-signature": false,
    "ban-types": false
  }
}
